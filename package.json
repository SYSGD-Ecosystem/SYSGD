{
	"name": "sysgd-monorepo",
	"private": true,
	"scripts": {
		"dev": "concurrently \"npm run dev-client\" \"npm run dev-server\"",
		"build": "concurrently \"npm run build-client\" \"npm run build-server\"",
		"install-all": "npm install --workspaces",
		"dev-client": "cd client/react-frontend && npm run dev",
		"dev-server": "cd server/node-server && npm run dev",
		"build-client": "cd client/react-frontend && npm run build",
		"build-server": "cd server/node-server && npm run build",
		"start-server": "cd server/node-server && npm start"
	},
	"devDependencies": {
		"biome": "^0.3.3",
		"concurrently": "^8.0.1",
		"serve": "^14.2.5"
	},
	"workspaces": [
		"client/react-frontend",
		"server/node-server",
		"web/sysgd-web",
		"admin/sysgd-admin"
	],
	"dependencies": {
		"@tailwindcss/vite": "^4.1.18",
		"tailwindcss": "^4.1.18"
	}
}
